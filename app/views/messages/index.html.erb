<div class="row medium-8 columns medium-offset-2">
    <% if @messages.any? %>
        <h2 align="center">Messages</h2>
        <ul class="no-bullet">
            <% @messages.each do |message| %>
                <div class="bs-callout bs-callout-primary">
                    <li>Sent By<strong> <%= message.patient.first_name %>, <%= message.patient.email_id %></strong></li>
                    <li>Message<strong> <%= message.content %></li>
                    <span class="timestamp">
                        Sent <%= time_ago_in_words(message.created_at) %> ago.
                        <div class="container">
                            <%= render "replys/new" %>
                        </div>
                        <%= link_to "delete", message, method: :delete, data: { confirm: "You sure?"    } %>
                    </span>
                </div>
            <% end %>
        </ul>
    <% else %>
        There no messages
    <% end %>
</div>

