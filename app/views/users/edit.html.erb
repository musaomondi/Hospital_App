<h1><%=t(:update_user, :scope => :topics)%></h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for @user, :html => {:class => "form well"} do |u|%>
            <%= render 'common/error_messages', :object => u.object %>

            <%=u.label :first_name%>
            <%=u.text_field :first_name, class: 'form-control'%>

            <%=u.label :last_name%>
            <%=u.text_field :last_name, class: 'form-control'%>

            <%=u.label :email_id%>
            <%=u.text_field :email_id, class: 'form-control'%>

            <%=u.label :user_type%>
            <%=u.select(:user_type_id, @user_types) %>

            <%=u.submit "Update", :class => "btn btn-primary"%>
        <% end %>
    </div>
</div>
