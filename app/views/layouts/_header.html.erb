<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container" >
        <nav>
            <%# <img src="/assets/hms.jpg" class="logo"/> %>
        <b style="font-size:40px;padding-left: 10px; color:Khaki"><%= t(:product_name, :scope => :widget_names)%></b>
        <%# </div> %>

    <% if has_signed? == true && @page_name != SessionsHelper::LOGIN%>
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"><%= t(:profile, :scope => :widget_names)%> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><%= link_to t(:view, :scope => :widget_names), @current_user%></li>
                    <li><%= link_to t(:edit, :scope => :widget_names), edit_user_path(@current_user)%></li>
                    <li><%= link_to t(:change_password, :scope => :widget_names), change_password_user_path(@current_user)%></li>
                </ul>
            </li>
            <% if @current_user.user_type.user_type_name == SessionsHelper::ADMIN%>
                <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"><%= t(:users, :scope => :widget_names)%> <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><%= link_to t(:create_user, :scope => :widget_names), new_user_path%></li>
                        <li><%= link_to t(:list_users, :scope => :widget_names), users_path%></li>
                    </ul>
                </li>
            <% end %>
            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"><%= t(:patients, :scope => :widget_names)%> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li><%= link_to t(:create_patient, :scope => :widget_names), new_patient_path%></li>
                    <li><%= link_to t(:list_patients, :scope => :widget_names), patients_path%></li>
                    <li><%= link_to t(:search, :scope => :widget_names), search_path%></li>
                </ul>
            </li>
            <li class="dropdown">
                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"><%= t(:reports, :scope => :topics)%> <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <% if @current_user.user_type.user_type_name == SessionsHelper::ADMIN%>
                        <li><%= link_to t(:doctors, :scope => :widget_names), reports_path(:type => "DOCTOR")%></li>
                        <li><%= link_to t(:staff, :scope => :widget_names), reports_path(:type => "STAFF")%></li>
                    <% else %>
                        <li><%= link_to t(:my_reports, :scope => :widget_names), my_reports_path%></li>
                    <% end %>
                </ul>
            </li>
            <li><%= link_to 'messages', messages_path %></li>
            <li> <%= link_to "Log out", sign_out_path, method: "delete", :style=>"padding-left: 25%;"%></li>
        <% elsif logged_in? %>
            <%= link_to "Log out", sign_out_path, method: "delete", :style=>"padding-left: 25%;"%>
        <% else %>
            <%= link_to "Log in", root_path , :style=>"padding-left: 40%;"%>
        <% end %>
        </ul>
        </div>
</header>
